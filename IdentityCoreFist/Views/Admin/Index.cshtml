@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>
<table class="table  table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center m-1 p-1">
                No Users
            </td>
        </tr>
    }
    else
    {
        foreach (ApplicationUser user in Model)
        {
            <tr>
                <td></td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <input type="submit" class="btn btn-danger" value="Delete" />
                       
                    </form>
                  
                </td>
                <td>
                    <a class="btn btn-primary" asp-route-id="@user.Id" asp-action="Update">Update</a>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="Create" asp-controller="Admin" class="btn btn-primary">
    Create User
</a>


